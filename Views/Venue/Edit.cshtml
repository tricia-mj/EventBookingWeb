@model EventBookingWeb.Models.Venue

<h2>Edit Venue</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="VenueId" />

    <div class="form-group mb-3">
        <label>Name</label>
        <input asp-for="VenueName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Location</label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Capacity</label>
        <input asp-for="Capacity" type="number" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Available</label>
        <input asp-for="IsAvailable" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a class="btn btn-secondary" href="/Venue">Cancel</a>
</form>
