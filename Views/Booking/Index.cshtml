@model IEnumerable<EventBookingWeb.Models.Booking>

<h2>Bookings</h2>

@if (TempData["Forecast"] != null)
{
    <div class="alert alert-info">
        <strong>Weather Forecast:</strong> @TempData["Forecast"]
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Date</th>
            <th>Time</th>
            <th>Venue</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.EventName</td>
                <td>@b.Date.ToString("dd/MM/yyyy")</td>
                <td>@b.StartTime - @b.EndTime</td>
                <td>@b.Venue?.VenueName</td>
                <td>@b.Status</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="/Booking/Create">Create Booking</a>