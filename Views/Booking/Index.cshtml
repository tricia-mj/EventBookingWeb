@model IEnumerable<EventBookingWeb.Models.Booking>

<h2>All Bookings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Date</th>
            <th>Time</th>
            <th>Venue</th>
            <th>User</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.EventName</td>
                <td>@b.Date.ToShortDateString()</td>
                <td>@b.StartTime - @b.EndTime</td>
                <td>@b.Venue?.VenueName</td>
                <td>@b.User?.Name</td>
                <td>@b.Status</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="/Booking/Create">Create Booking</a>
